<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item
                android:bottom="10px"
                >
                <shape>
                    <padding android:bottom="10dp"/>
                    <gradient
                        android:startColor="@color/navy_blue"
                        android:endColor="@color/blue_grotto"
                        android:angle="270" />
                    <stroke android:color="@color/white" android:width="2dp"></stroke>
                    <corners
                        android:radius="10dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="10px">
                <shape>
                    <padding android:bottom="10dp"/>
                    <gradient
                        android:startColor="@color/baby_blue"
                        android:endColor="@color/blue_grotto"
                        android:angle="270" />
                    <corners
                        android:radius="10dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>